function AIHit() {
  hand2.push(shuffledDeck[3])
  hand2.push(shuffledDeck[4])
  AITotal = 0
  for(i = hand2.length - 1; i > 0; i -= 1) {
    AITotal += hand2[i][4]
  }
  if(AITotal <= 17) {
    hand2.push(shuffledDeck[5])
    AIHit() 
 }
